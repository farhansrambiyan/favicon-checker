{
  "manifest_version": 3,
  "name": "Favicon Checker",
  "version": "1.1",
  "description": "Lists, validates, and checks if favicons are crawlable on the current website.",
  "permissions": ["activeTab", "scripting", "favicon", "webRequest", "webRequestBlocking"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
